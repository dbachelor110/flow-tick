{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": [
      "DOM",
      "ES2022"
    ],
    
    /* Modules */
    "baseUrl": ".",
    "module": "es2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    
    /* JavaScript Support */
    "allowJs": true,
    
    /* Emit */
    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    
    /* Type Checking */
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    /* Interop Constraints */
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules",
    "**.mjs",
    "**.js"
  ],
}